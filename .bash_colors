#!/bin/bash

# https://github.com/robbyrussell/oh-my-zsh/issues/4404#issuecomment-143728489
if [[ $(uname) == "FreeBSD" ]]; then
    RED=$(tput AF 1)
    GREEN=$(tput AF 2)
    YELLOW=$(tput AF 3)
    BLUE=$(tput AF 4)
    PURPLE=$(tput AF 5)
    CYAN=$(tput AF 6)
    WHITE=$(tput AF 7)
    GRAY=$(tput AF 8)
    FADED_PURPLE=$(tput AF 128)
    ORANGE=$(tput AF 16)
    STOP=$WHITE
else
    RED=$(tput setaf 1)
    GREEN=$(tput setaf 2)
    YELLOW=$(tput setaf 3)
    BLUE=$(tput setaf 4)
    PURPLE=$(tput setaf 5)
    CYAN=$(tput setaf 6)
    WHITE=$(tput setaf 7)
    GRAY=$(tput setaf 8)
    FADED_PURPLE=$(tput setaf 128)
    ORANGE=$(tput setaf 16)
    STOP=$(tput sgr0)
fi

